<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 2rem;
  }

  .container-login {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    width: 100%;
    max-width: 450px;
    position: relative;
    overflow: hidden;
  }

  .container-login::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(45deg, #667eea, #764ba2, #22c55e);
    background-size: 300% 300%;
    animation: gradientShift 3s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .back-home {
    position: absolute;
    top: 2rem;
    left: 2rem;
    color: white;
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: opacity 0.3s ease;
    z-index: 10;
  }

  .back-home:hover {
    opacity: 0.8;
  }

  .forgot-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .title_login {
    font-size: 2rem;
    font-weight: 700;
    color: #374151;
    margin-bottom: 0.5rem;
  }

  .ai-subtitle {
    color: #6b7280;
    font-size: 1rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .ai-badge {
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .forgot-description {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 12px;
    padding: 1.25rem;
    margin-bottom: 2rem;
    color: #1e40af;
    font-size: 0.9rem;
    line-height: 1.5;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .forgot-description .icon {
    font-size: 1.2rem;
    margin-top: 0.1rem;
  }

  .field {
    margin-bottom: 1.5rem;
    position: relative;
  }

  .label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #374151;
    font-size: 1rem;
  }

  .input {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.9);
    position: relative;
  }

  .input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .input:hover {
    border-color: #9ca3af;
  }

  .input-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #9ca3af;
    font-size: 1.1rem;
    pointer-events: none;
  }

  .actions {
    margin-top: 2rem;
    margin-bottom: 1.5rem;
  }

  .btn-submit {
    width: 100%;
    background: linear-gradient(45deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .btn-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
  }

  .btn-submit:hover::before {
    left: 100%;
  }

  .btn-submit:disabled {
    background: #9ca3af;
    cursor: not-allowed;
    transform: none;
  }

  /* Devise Links Styling */
  .devise-links {
    text-align: center;
    border-top: 1px solid #e5e7eb;
    padding-top: 1.5rem;
  }

  .devise-links a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    margin: 0 0.5rem;
    transition: color 0.3s ease;
    display: inline-block;
    padding: 0.5rem;
  }

  .devise-links a:hover {
    color: #4f46e5;
    text-decoration: underline;
  }

  /* Error messages */
  .error-messages {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    color: #dc2626;
  }

  .error-messages h2 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .error-messages ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .error-messages li {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }

  /* Success message */
  .success-message {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    color: #166534;
    display: none;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    body {
      padding: 1rem;
    }

    .container-login {
      padding: 2rem;
    }

    .title_login {
      font-size: 1.8rem;
    }

    .back-home {
      position: relative;
      top: auto;
      left: auto;
      margin-bottom: 1rem;
      color: #667eea;
      justify-content: center;
    }
  }
</style>

<%= link_to root_path, class: "back-home" do %>
  ‚Üê Back to Home
<% end %>

<div class="container-login">
  <div class="forgot-header">
    <h2 class="title_login">Reset Password</h2>
    <div class="ai-subtitle">
      <span class="ai-badge">üîê Account Recovery</span>
      Secure password reset for AI platform
    </div>
  </div>

  <div class="forgot-description">
    <span class="icon">üí°</span>
    <div>
      <strong>No worries!</strong> Enter your email address and we'll send you a secure link to reset your password. The link will expire in 6 hours for security.
    </div>
  </div>

  <% if resource.errors.any? %>
    <div class="error-messages">
      <h2>
        <%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="success-message" id="success-message">
    ‚úÖ <strong>Reset link sent!</strong> Check your email for password reset instructions.
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email, "Email Address", class: "label" %>
      <div style="position: relative;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "input", placeholder: "Enter your email address" %>
        <span class="input-icon">üìß</span>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "üöÄ Send Reset Instructions", class: "btn-submit" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  // Enhanced form interactions
  document.querySelector('.input').addEventListener('focus', () => {
    const input = document.querySelector('.input');
    input.style.transform = 'translateY(-2px)';
    input.style.transition = 'all 0.3s ease';
  });

  document.querySelector('.input').addEventListener('blur', () => {
    const input = document.querySelector('.input');
    input.style.transform = 'translateY(0)';
  });

  // Loading state for submit button
  document.querySelector('form').addEventListener('submit', (e) => {
    const submitBtn = document.querySelector('.btn-submit');
    submitBtn.innerHTML = 'üì§ Sending Instructions...';
    submitBtn.disabled = true;

    // Show success message after a delay (simulated)
    setTimeout(() => {
      const successMsg = document.getElementById('success-message');
      if (successMsg) {
        successMsg.style.display = 'block';
        successMsg.style.animation = 'fadeIn 0.5s ease';
      }
    }, 1000);
  });

  // Email validation feedback
  const emailInput = document.querySelector('.input');
  emailInput.addEventListener('input', (e) => {
    const email = e.target.value;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (email && !emailRegex.test(email)) {
      emailInput.style.borderColor = '#f59e0b';
      emailInput.style.boxShadow = '0 0 0 3px rgba(245, 158, 11, 0.1)';
    } else if (email) {
      emailInput.style.borderColor = '#22c55e';
      emailInput.style.boxShadow = '0 0 0 3px rgba(34, 197, 94, 0.1)';
    } else {
      emailInput.style.borderColor = '#e5e7eb';
      emailInput.style.boxShadow = 'none';
    }
  });
</script>