<div class="container-login">
  <div class="reset-header">
    <h2 class="title_login">Set New Password</h2>
    <div class="ai-subtitle">
      <span class="ai-badge">üîê Secure Reset</span>
      Create a strong password for your account
    </div>
  </div>

  <div class="security-notice">
    <span class="icon">üõ°Ô∏è</span>
    <div>
      <strong>Security first!</strong> Choose a strong password with at least 8 characters, including uppercase, lowercase, numbers, and special characters.
    </div>
  </div>

  <% if resource.errors.any? %>
    <div class="error-messages">
      <h2>
        <%= I18n.t("errors.messages.not_saved", count: resource.errors.count, resource: resource.class.model_name.human.downcase) %>
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New Password", class: "label" %>
      <% if @minimum_password_length %>
        <div class="password-hint">
          Minimum <%= @minimum_password_length %> characters required
        </div>
      <% end %>
      <div style="position: relative;">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "input", placeholder: "Enter your new password", id: "password-input" %>
        <span class="input-icon">üîí</span>
      </div>
      <div class="password-strength" id="password-strength">
        <div class="strength-bar"></div>
        <div class="strength-bar"></div>
        <div class="strength-bar"></div>
        <div class="strength-bar"></div>
      </div>
      <div class="strength-text" id="strength-text"></div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm New Password", class: "label" %>
      <div style="position: relative;">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "input", placeholder: "Confirm your new password", id: "password-confirm" %>
        <span class="input-icon">‚úÖ</span>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "üîê Update Password", class: "btn-submit" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  // Enhanced form interactions
  document.querySelectorAll('.input').forEach(input => {
    input.addEventListener('focus', () => {
      input.style.transform = 'translateY(-2px)';
      input.style.transition = 'all 0.3s ease';
    });

    input.addEventListener('blur', () => {
      input.style.transform = 'translateY(0)';
    });
  });

  // Password strength indicator
  const passwordInput = document.getElementById('password-input');
  const passwordConfirm = document.getElementById('password-confirm');
  const strengthBars = document.querySelectorAll('.strength-bar');
  const strengthText = document.getElementById('strength-text');

  function checkPasswordStrength(password) {
    let strength = 0;
    let feedback = '';

    if (password.length >= 8) strength++;
    if (/[a-z]/.test(password)) strength++;
    if (/[A-Z]/.test(password)) strength++;
    if (/[0-9]/.test(password)) strength++;
    if (/[^A-Za-z0-9]/.test(password)) strength++;

    if (strength <= 2) {
      feedback = 'Weak password';
    } else if (strength <= 3) {
      feedback = 'Medium strength';
    } else if (strength <= 4) {
      feedback = 'Strong password';
    } else {
      feedback = 'Very strong password';
    }

    return { strength: Math.min(strength, 4), feedback };
  }

  function updateStrengthIndicator(result) {
    const { strength, feedback } = result;

    strengthBars.forEach((bar, index) => {
      bar.className = 'strength-bar';
      if (index < strength) {
        if (strength <= 2) bar.classList.add('weak');
        else if (strength <= 3) bar.classList.add('medium');
        else bar.classList.add('strong');
      }
    });

    strengthText.textContent = feedback;
    strengthText.className = 'strength-text';
    if (strength <= 2) strengthText.classList.add('weak');
    else if (strength <= 3) strengthText.classList.add('medium');
    else strengthText.classList.add('strong');
  }

  function checkPasswordMatch() {
    if (passwordConfirm.value && passwordInput.value !== passwordConfirm.value) {
      passwordConfirm.style.borderColor = '#ef4444';
      passwordConfirm.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.1)';
      passwordConfirm.nextElementSibling.textContent = '‚ùå';
    } else if (passwordConfirm.value && passwordInput.value === passwordConfirm.value) {
      passwordConfirm.style.borderColor = '#22c55e';
      passwordConfirm.style.boxShadow = '0 0 0 3px rgba(34, 197, 94, 0.1)';
      passwordConfirm.nextElementSibling.textContent = '‚úÖ';
    } else {
      passwordConfirm.style.borderColor = '#e5e7eb';
      passwordConfirm.style.boxShadow = 'none';
      passwordConfirm.nextElementSibling.textContent = 'üîí';
    }
  }

  passwordInput.addEventListener('input', (e) => {
    const result = checkPasswordStrength(e.target.value);
    updateStrengthIndicator(result);
    checkPasswordMatch();
  });

  passwordConfirm.addEventListener('input', checkPasswordMatch);

  // Loading state for submit button
  document.querySelector('form').addEventListener('submit', (e) => {
    const submitBtn = document.querySelector('.btn-submit');
    submitBtn.innerHTML = 'üîÑ Updating Password...';
    submitBtn.disabled = true;
  });
</script>